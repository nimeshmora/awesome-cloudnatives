{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CloudNative Influencer Profile",
  "description": "Schema for influencer profiles in awesome-cloudnatives",
  "type": "object",
  "required": ["id", "name", "tagline", "expertise", "social"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique slug identifier (lowercase, hyphens only)"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "Full name of the influencer"
    },
    "tagline": {
      "type": "string",
      "minLength": 10,
      "maxLength": 150,
      "description": "Brief one-liner description"
    },
    "bio": {
      "type": "string",
      "maxLength": 500,
      "description": "Longer bio (optional, 2-3 sentences)"
    },
    "avatar": {
      "type": "string",
      "format": "uri",
      "description": "URL to profile image (GitHub avatar recommended)"
    },
    "expertise": {
      "type": "object",
      "required": ["primary"],
      "properties": {
        "primary": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Kubernetes",
              "AWS",
              "Azure",
              "GCP",
              "DevOps",
              "CI/CD",
              "GitOps",
              "Platform Engineering",
              "SRE",
              "DevSecOps",
              "Observability",
              "Infrastructure as Code",
              "Containers",
              "Serverless",
              "Microservices"
            ]
          },
          "minItems": 1,
          "maxItems": 5,
          "uniqueItems": true
        },
        "secondary": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 5,
          "uniqueItems": true
        }
      }
    },
    "social": {
      "type": "object",
      "properties": {
        "twitter": {
          "type": "string",
          "description": "Twitter/X handle (without @)"
        },
        "github": {
          "type": "string",
          "description": "GitHub username"
        },
        "linkedin": {
          "type": "string",
          "description": "LinkedIn username"
        },
        "youtube": {
          "type": "string",
          "description": "YouTube channel ID or custom URL"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Personal website or blog"
        },
        "mastodon": {
          "type": "string",
          "description": "Mastodon handle (@user@instance)"
        }
      },
      "anyOf": [
        {"required": ["twitter"]},
        {"required": ["github"]},
        {"required": ["linkedin"]},
        {"required": ["youtube"]}
      ]
    },
    "content": {
      "type": "object",
      "properties": {
        "blog": {
          "type": "string",
          "format": "uri"
        },
        "newsletter": {
          "type": "string",
          "format": "uri"
        },
        "podcast": {
          "type": "string",
          "format": "uri"
        },
        "courses": {
          "type": "string",
          "format": "uri"
        },
        "speaking": {
          "type": "boolean",
          "description": "Available for speaking engagements"
        },
        "workshops": {
          "type": "boolean",
          "description": "Offers workshops or training"
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "description": "City, Country or Region"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Languages spoken for content"
        },
        "company": {
          "type": "string",
          "description": "Current company/organization"
        },
        "verified": {
          "type": "boolean",
          "description": "Verified by maintainers",
          "default": false
        },
        "added_date": {
          "type": "string",
          "format": "date",
          "description": "Date added to directory (YYYY-MM-DD)"
        }
      }
    }
  }
}
