---
import BaseLayout from '../layouts/BaseLayout.astro';

// Use Astro.glob to import all influencer JSON files
const allInfluencerFiles = await Astro.glob('../../data/influencers/**/*.json');

// Transform and categorize influencers
const influencers = allInfluencerFiles.map((file) => {
  // Extract category from file path
  const pathParts = file.file?.split('/') || [];
  const category = pathParts[pathParts.length - 2] || 'unknown';

  return {
    ...file.default,
    category
  };
}).sort((a, b) => a.name.localeCompare(b.name));
const categories = await import('../../data/categories.json');
const expertise = categories.default.expertise;

// Get stats
const totalInfluencers = influencers.length;
const uniqueExpertise = new Set(influencers.flatMap(i => i.expertise.primary)).size;
---

<BaseLayout title="Home">
  <div class="hero">
    <div class="container">
      <h1>Awesome CloudNatives</h1>
      <p>
        Discover voices shaping DevOps, Cloud, and Cloud-Native.<br/>
        All in one place. Curated by the community.
      </p>
      <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 1.5rem;">
        <a href="https://github.com/nimeshmora/awesome-cloudnatives" class="cta-btn primary">
          ‚≠ê Star on GitHub
        </a>
        <a href="https://github.com/nimeshmora/awesome-cloudnatives/blob/main/CONTRIBUTING.md" class="cta-btn secondary">
          ‚ûï Add Influencer
        </a>
      </div>
    </div>
  </div>

  <div class="container">
    <!-- Search Section -->
    <div class="search-section">
      <h2 class="search-title">üîç Search Influencers</h2>
      <p class="search-subtitle">Find cloud-native experts by name, expertise, or technology</p>
      <div class="search-container">
        <div id="search"></div>
      </div>
    </div>

    <!-- Stats -->
    <div style="text-align: center; margin: 2rem 0; color: var(--color-text-muted);">
      <strong>{totalInfluencers}</strong> influencers across <strong>{uniqueExpertise}</strong> expertise areas
    </div>

    <!-- Filter Buttons -->
    <div class="filters" id="filters">
      <button class="filter-btn active" data-filter="all">All</button>
      {expertise.map((exp: string) => (
        <button class="filter-btn" data-filter={exp}>{exp}</button>
      ))}
    </div>

    <!-- Influencers Grid -->
    <div class="influencers-grid" id="influencers-grid">
      {influencers.map((influencer) => (
        <div class="card" data-expertise={JSON.stringify(influencer.expertise.primary)}>
          <div class="card-header">
            {influencer.avatar && (
              <img src={influencer.avatar} alt={influencer.name} class="avatar" loading="lazy" />
            )}
            <div class="card-title">
              <h3>{influencer.name}</h3>
            </div>
          </div>

          <p class="tagline">{influencer.tagline}</p>

          <div class="tags">
            {influencer.expertise.primary.slice(0, 3).map((exp: string) => (
              <span class="tag">{exp}</span>
            ))}
          </div>

          <div class="social-links">
            {influencer.social.github && (
              <a href={`https://github.com/${influencer.social.github}`} target="_blank" rel="noopener" class="social-link">
                GitHub
              </a>
            )}
            {influencer.social.twitter && (
              <a href={`https://twitter.com/${influencer.social.twitter}`} target="_blank" rel="noopener" class="social-link">
                Twitter
              </a>
            )}
            {influencer.social.linkedin && (
              <a href={`https://linkedin.com/in/${influencer.social.linkedin}`} target="_blank" rel="noopener" class="social-link">
                LinkedIn
              </a>
            )}
            {influencer.social.youtube && (
              <a href={`https://youtube.com/${influencer.social.youtube}`} target="_blank" rel="noopener" class="social-link">
                YouTube
              </a>
            )}
          </div>

          <div class="card-actions">
            {/* Primary CTA based on available content */}
            {influencer.content?.courses ? (
              <a href={influencer.content.courses} target="_blank" rel="noopener" class="cta-button">
                üìö View Courses
              </a>
            ) : influencer.content?.youtube ? (
              <a href={`https://youtube.com/${influencer.social.youtube}`} target="_blank" rel="noopener" class="cta-button">
                ‚ñ∂Ô∏è Watch Videos
              </a>
            ) : influencer.content?.blog ? (
              <a href={influencer.content.blog} target="_blank" rel="noopener" class="cta-button">
                üìù Read Blog
              </a>
            ) : influencer.content?.newsletter ? (
              <a href={influencer.content.newsletter} target="_blank" rel="noopener" class="cta-button">
                üìß Subscribe
              </a>
            ) : influencer.social.website ? (
              <a href={influencer.social.website} target="_blank" rel="noopener" class="cta-button">
                üåê Visit Website
              </a>
            ) : influencer.social.github ? (
              <a href={`https://github.com/${influencer.social.github}`} target="_blank" rel="noopener" class="cta-button">
                üë®‚Äçüíª Follow on GitHub
              </a>
            ) : null}

            {/* Share button */}
            <button
              class="share-button"
              data-influencer-id={influencer.id}
              data-influencer-name={influencer.name}
              title="Share this profile"
              onclick={`shareInfluencer('${influencer.id}', '${influencer.name.replace(/'/g, "\\'")}')`}
            >
              üì§ Share
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Pagefind UI -->
  <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
  <script is:inline src="/pagefind/pagefind-ui.js"></script>
  <script is:inline>
    // Initialize Pagefind search
    if (typeof PagefindUI !== 'undefined') {
      new PagefindUI({
        element: "#search",
        showSubResults: true,
        showImages: false
      });
    }

    // Filter functionality
    const filterBtns = document.querySelectorAll('.filter-btn');
    const cards = document.querySelectorAll('.card');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');

        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter cards
        cards.forEach(card => {
          if (filter === 'all') {
            card.style.display = 'flex';
          } else {
            const expertise = JSON.parse(card.getAttribute('data-expertise') || '[]');
            if (expertise.includes(filter)) {
              card.style.display = 'flex';
            } else {
              card.style.display = 'none';
            }
          }
        });
      });
    });

    // Share functionality
    window.shareInfluencer = async function(id, name) {
      const url = `${window.location.origin}${window.location.pathname.replace(/\/$/, '')}/influencers/${id}/`;
      const text = `Check out ${name} on Awesome CloudNatives!`;

      // Try native Web Share API first (mobile)
      if (navigator.share) {
        try {
          await navigator.share({
            title: `${name} - Awesome CloudNatives`,
            text: text,
            url: url
          });
          return;
        } catch (err) {
          // User cancelled or error, fallback to copy
        }
      }

      // Fallback: Copy to clipboard
      try {
        await navigator.clipboard.writeText(url);

        // Show feedback
        const button = event.target.closest('.share-button');
        const originalText = button.textContent;
        button.textContent = '‚úÖ Copied!';
        button.style.background = '#10b981';

        setTimeout(() => {
          button.textContent = originalText;
          button.style.background = '';
        }, 2000);
      } catch (err) {
        // Fallback: Show URL in prompt
        prompt('Copy this URL:', url);
      }
    };
  </script>

  <style>
    /* Search Section */
    .search-section {
      background: var(--color-bg-secondary);
      border-radius: 1rem;
      padding: 2rem;
      margin-bottom: 2rem;
      border: 1px solid var(--color-border);
    }

    .search-title {
      text-align: center;
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .search-subtitle {
      text-align: center;
      color: var(--color-text-muted);
      margin-bottom: 1.5rem;
      font-size: 0.95rem;
    }

    .search-container {
      max-width: 600px;
      margin: 0 auto;
    }

    /* Pagefind UI Customization */
    #search {
      --pagefind-ui-scale: 1;
      --pagefind-ui-primary: var(--color-primary);
      --pagefind-ui-text: var(--color-text);
      --pagefind-ui-background: var(--color-bg);
      --pagefind-ui-border: var(--color-border);
      --pagefind-ui-tag: var(--color-accent);
    }

    .cta-btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s;
    }

    .cta-btn.primary {
      background: var(--color-primary);
      color: white;
    }

    .cta-btn.primary:hover {
      background: var(--color-primary-hover);
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }

    .cta-btn.secondary {
      background: transparent;
      color: var(--color-primary);
      border: 2px solid var(--color-primary);
    }

    .cta-btn.secondary:hover {
      background: var(--color-primary);
      color: white;
      transform: translateY(-2px);
    }

    /* Card Actions */
    .card-actions {
      display: flex;
      gap: 0.5rem;
      margin-top: 1rem;
      padding-top: 1rem;
      border-top: 1px solid var(--color-border);
    }

    .cta-button {
      flex: 1;
      display: inline-block;
      padding: 0.625rem 1rem;
      background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
      color: white;
      text-decoration: none;
      border-radius: 0.5rem;
      font-weight: 600;
      font-size: 0.875rem;
      text-align: center;
      transition: all 0.2s;
      border: none;
      cursor: pointer;
    }

    .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow);
      opacity: 0.9;
    }

    .share-button {
      padding: 0.625rem 1rem;
      background: var(--color-bg-tertiary);
      color: var(--color-text);
      border: 1px solid var(--color-border);
      border-radius: 0.5rem;
      font-weight: 600;
      font-size: 0.875rem;
      cursor: pointer;
      transition: all 0.2s;
      white-space: nowrap;
    }

    .share-button:hover {
      background: var(--color-bg-secondary);
      border-color: var(--color-primary);
      transform: translateY(-2px);
    }

    @media (max-width: 480px) {
      .card-actions {
        flex-direction: column;
      }

      .cta-button,
      .share-button {
        width: 100%;
      }
    }
  </style>
</BaseLayout>
